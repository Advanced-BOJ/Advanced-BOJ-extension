{
    "manifest_version": 3,
    "name": "Advanced BOJ",
    "description": "오토커밋 등 백준 사이트의 편의성을 제공해주는 extension",
    "version": "1.0.0",
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "128": "icons/icon_128.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess"
    ],
    "options_page": "options/options.html",
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "host_permissions": [
        "https://www.acmicpc.net/*",
        "https://github.com/*"
    ],
    "content_scripts": [{
        "matches": ["https://www.acmicpc.net/status?*"],
        "js": [
            "./modules/jquery.js",
            "./modules/jsencrypt.min.js",
            "./modules/base64.js",
            "./modules/utils.js",
            "./js/baekjoon/getdatas.js",
            "./js/baekjoon/judge_status.js",
            "./js/github/commit_message_setter.js",
            "./js/github/auto_commit_controller.js"
        ],
        "run_at": "document_idle"
        }, 
        {
            "matches": ["https://www.acmicpc.net/*"],
            "js": [
                "./modules/utils.js",
                "./js/baekjoon/change.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": ["https://github.com/*"],
            "js": [
                "./modules/utils.js",
                "./js/github/commit_message_setter.js",
                "./js/github/auto_commit_controller.js",
                "./js/github/github_message_sender.js",
                "./js/github/oauth.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}